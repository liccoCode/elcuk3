# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Import Secure routes
*      /                                                    module:secure


# Home page
GET     /                                                   Application.index
GET     /pass                                               Application.pwd
GET     /cc                                                 Application.cc

# Ignore favicon requests
GET     /favicon.ico                                        404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                            staticDir:public
GET     /js/                                                staticDir:public/javascripts
GET     /images/                                            staticDir:public/images
GET     /img/                                               staticDir:public/images
GET     /helper/                                            staticDir:public/images/helper

# REST CRUD
GET     /{controller}/page/{page}                           {controller}.p
GET     /market/{controller}/page/{page}                    market.{controller}.p
GET     /product/{controller}/page/{page}                   product.{controller}.p

*       /procures/invisible                                 procures.ps

# Catch all
*       /{controller}/{action}                              {controller}.{action}
*       /market/{controller}/{action}                       market.{controller}.{action}
*       /product/{controller}/{action}                      product.{controller}.{action}

